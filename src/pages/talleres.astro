<style>
    h1 {
        font-size: 5rem;
        font-weight: 700;
    }

    .courses-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 4rem;
    }

    .call-to-action {
        text-align: center;
        padding: 0.8rem 1.3rem;
        border-radius: 2rem;
        background-color: black;
        width: fit-content;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 4rem;
        cursor: pointer;
    }

    .call-to-action a {
        display: block;
        text-decoration: none;
        color: white;
    }

    .arrow-container {
        position: relative;
    }

    .arrow-container img {
        position: absolute;
        top: 0;
        left: 30%;
        transform: rotateZ(185deg);
        width: 10rem;
        height: 10rem;
    }

    /* ðŸ“± Responsive */
    @media (max-width: 1024px) {
        h1 {
            font-size: 3.5rem;
            text-align: center;
        }

        .courses-container {
            flex-wrap: wrap;
            gap: 2rem;
            padding: 0 2rem;
        }

        .arrow-container img {
            width: 7rem;
            height: 7rem;
            left: 40%;
            top: 1rem;
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.8rem;
        }

        .courses-container {
            flex-direction: column;
            align-items: center;
            gap: 2.5rem;
        }

        .arrow-container img {
            position: static;
            transform: rotateZ(-35deg);
            display: block;
            margin: 1rem auto 2rem auto;
            width: 6rem;
            height: 6rem;
        }

        .call-to-action {
            margin-bottom: 2rem;
        }
    }

    @media (max-width: 480px) {
        h1 {
            font-size: 2.2rem;
        }

        .courses-container {
            gap: 1.5rem;
        }

        .arrow-container img {
            width: 4.5rem;
            height: 4.5rem;
            transform: rotateZ(-35deg);
        }
    }
</style>
