---
import SectionContainer from "../components/SectionContainer.astro";
import Layout from "../layouts/Layout.astro";
import HeroImg from "../assets/hero.png";
import HeroAnimation from "../assets/heroAnimation.gif";
import CoursesImg from "../assets/courses.png";
import ParallaxItem from "../components/ParallaxItem.astro";
---

<Layout>
    <SectionContainer sectionId="home">
        <div class="hero-animation">
            <img src={HeroAnimation.src} alt="" />
        </div>
        <div class="hero-container">
            <ParallaxItem
                image="images/asset2.png"
                speed={0.3}
                className="asset-img"
            />
            <div class="hero-text">
                <h1>Â¿Ya probaste<br />un cafÃ© igual?</h1>
                <div class="call-to-action">
                    <a href="/comprar">Comprar cafÃ©</a>
                </div>
            </div>
            <div class="hero-img">
                <img src={HeroImg.src} alt="Chica tomando cafÃ©" />
            </div>
        </div>

        <div class="courses-container">
            <div class="courses-img">
                <img src={CoursesImg.src} alt="" />
            </div>
            <div class="courses-text">
                <h1>Â¿Te interesa aprender<br />sobre el cafÃ©?</h1>
                <div class="call-to-action">
                    <a href="/talleres">Comenzar taller</a>
                </div>
            </div>
            <ParallaxItem
                image="images/asset1.png"
                speed={0.3}
                className="asset-img"
            />
        </div>

        <div class="reviews-container"></div>
    </SectionContainer>
</Layout>

<style>
    .hero-container,
    .courses-container {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-top: 4rem;
        margin-bottom: 4rem;
        min-height: 100vh;
        align-items: center;
        position: relative;
    }

    div > img {
        border-radius: 1rem;
        max-width: 100%;
        height: auto;
    }

    .hero-container h1 {
        font-size: 5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .courses-container h1 {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .call-to-action {
        background-color: black;
        color: white;
        display: block;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        width: fit-content;
        cursor: pointer;
    }

    .call-to-action a {
        text-decoration: none;
        color: white;
    }

    .hero-animation img {
        width: 100%;
    }

    .asset-img {
        position: absolute;
        top: 20%;
        left: 10%;
    }

    /* ðŸ“± Responsive */
    @media (max-width: 1024px) {
        .hero-container,
        .courses-container {
            flex-direction: column;
            text-align: center;
            min-height: auto;
            padding: 2rem 1rem;
        }

        .hero-container h1 {
            font-size: 3rem;
        }

        .courses-container h1 {
            font-size: 2.5rem;
        }

        .asset-img {
            position: absolute;
            top: 10%;
            left: 0;
            opacity: 0.5;
            width: 120px;
        }

        .hero-img img,
        .courses-img img {
            max-width: 90%;
            margin: 0 auto;
        }

        .call-to-action {
            margin: 1rem auto;
        }
    }

    @media (max-width: 600px) {
        .hero-container h1 {
            font-size: 2.2rem;
        }

        .courses-container h1 {
            font-size: 2rem;
        }

        .hero-container,
        .courses-container {
            gap: 1.5rem;
        }

        .asset-img {
            display: none; /* se oculta en pantallas muy pequeÃ±as */
        }
    }
</style>
